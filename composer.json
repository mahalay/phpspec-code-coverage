{
    "name" : "mahalay/phpspec-code-coverage",
    "description" : "Code Coverage Extension for PhpSpec",
    "license" : "MIT",

    "autoload" : {
        "psr-4" : { "Mahalay\\PhpSpecCodeCoverage\\" : "src/" }
    },

    "config": {
        "bin-dir": "bin"
    },

    "require" : {
        "php": "^5.6|^7.0",
        "phpspec/phpspec": "^3.0",
        "phpunit/php-code-coverage": "^4.0|^5.0"
    },

    "suggest": {
        "ext-xdebug": "To allow coverage generation when not using a recent version of phpdbg"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "3.2.x-dev"
        }
    }
}
